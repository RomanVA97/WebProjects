@using WebApplication1.Models;

<div id="P">
    <table class="table table-striped">
        <tr>
            <td>Должность</td>
            <td>Условия труда</td>
            <td>Укажите, какие профессиональные задачи Вы способны решать наиболее компетентно в настоящее время</td>
            <td>Дополнительные сведения,которые Вы считаете необходимым сообщить</td>
        </tr>

        <tr>
            <td>
                @foreach (DesiredPositionItem item in ViewBag.DesiredPosition)
                {
                    @item.ThePost
                    <img src="~/Image/btnCancel.png" onclick="DeleteDesiredPosition(@item.PostId)" width="16" height="16" alt="альтернативный текст">
                    <br />
                }
            </td>
            <td width="300px"><textarea name="WorkingConditions" id="InputWorkingConditions" class="form-control" rows="3">@ViewBag.WorkingConditions</textarea></td>
            <td width="300px"><textarea name="ProfessionalTasks" id="InputProfessionalTasks" class="form-control" rows="3">@ViewBag.ProfessionalTasks</textarea></td>
            <td width="300px"><textarea name="ForMoreInformation" id="InputForMoreInformation" class="form-control" rows="3">@ViewBag.ForMoreInformation</textarea></td>
        </tr>
    </table>
</div>



