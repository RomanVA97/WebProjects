
<div>
    <h3>Для того чтобы отказаться от посещения врача два раза кликните по записи</h3>
</div>
<table class="table table-hover">
    <tr>
        <td class="active">ФИО врача</td>
        <td class="success">Дата и время</td>
        <td class="warning">Номер кабинета</td>
    </tr>
    @foreach (var item in ViewBag.Items)
    {
        <tr ondblclick="OnClick(@item.Id)">
            <td class="active">@item.FIO</td>
            <td class="success">@item.Date</td>
            <td class="warning">@item.Office</td>
        </tr>
    }
</table>

